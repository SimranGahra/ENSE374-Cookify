<div class="container my-5">
  <!-- Recipe Header -->
  <div class="row mb-4">
    <div class="col-md-8">
      <h1 class="display-4 fw-bold" style="font-family: 'Poppins', sans-serif; color: #343a40; text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);">
        <%= data.name %>
      </h1>
      <p class="lead" style="font-size: 1.1rem; font-style: italic; color: #6c757d; text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);">
        <%= data.description %>
      </p>

      <!-- Add to Favorites Button -->
      <% if (!data.isFavorited) { %>
        <a href="/addto_favorites/<%= data.generatedId || data._id %>" 
          class="btn btn-light px-4 py-2 rounded-pill shadow-lg" 
          style="background-color: #343a40; color: #ffffff; font-weight: bold; text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3); transition: all 0.3s ease;">
          Add to Favorites
        </a>
      <% } else { %>
        <button class="btn btn-light px-4 py-2 rounded-pill shadow-lg" 
          style="background-color: #28a745; color: #ffffff; font-weight: bold; text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3); transition: all 0.3s ease;" disabled>
          Already Favorited
        </button>
      <% } %>
    </div>
    <!-- FOR IMAGE IN FUTURE -->
    <!-- <div class="col-md-4 text-center">
      <img src="https://via.placeholder.com/300" alt="<%= data.name %> Image" class="img-fluid rounded">
    </div> -->
  </div>

  <!-- Recipe Details (Prep Time, Calories, Meal Type) -->
  <div class="row mb-5">
    <div class="col-md-4">
      <div class="card shadow-lg border-0" style="border-radius: 15px; background-color: #f8f9fa;">
        <div class="card-body text-center">
          <h5 class="card-title fw-bold" style="color: #495057;">Prep Time</h5>
          <p class="card-text" style="font-size: 1.2rem; color: #6c757d;"><%= data.prep_time %> minutes</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-lg border-0" style="border-radius: 15px; background-color: #f8f9fa;">
        <div class="card-body text-center">
          <h5 class="card-title fw-bold" style="color: #495057;">Calories</h5>
          <p class="card-text" style="font-size: 1.2rem; color: #6c757d;"><%= data.calories %> cal</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-lg border-0" style="border-radius: 15px; background-color: #f8f9fa;">
        <div class="card-body text-center">
          <h5 class="card-title fw-bold" style="color: #495057;">Meal Type</h5>
          <p class="card-text" style="font-size: 1.2rem; color: #6c757d;"><%= data.meal_type %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Ingredients Section -->
  <div class="row mb-5">
    <div class="col">
      <div class="card shadow-lg border-0" style="border-radius: 15px; background-color: #ffffff;">
        <div class="card-body">
          <h4 class="card-title fw-bold" style="color: #495057;">Ingredients</h4>
          <ul class="list-group list-group-flush">
            <% data.ingredients.forEach(function(ingredient) { %>
              <li class="list-group-item" style="font-size: 1rem; color: #6c757d; border: none;"><%= ingredient %></li>
            <% }); %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Method Section -->
  <div class="row">
    <div class="col">
      <div class="card shadow-lg border-0" style="border-radius: 15px; background-color: #ffffff;">
        <div class="card-body">
          <h4 class="card-title fw-bold" style="color: #495057;">Method</h4>
          <ol style="font-size: 1rem; color: #6c757d; margin-left: 15px;">
            <% data.method.forEach(function(step) { %>
              <li style="margin-bottom: 10px;"><%= step %></li>
            <% }); %>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
