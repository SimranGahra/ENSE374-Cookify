<%- include("layouts/header") -%>
<%- include("layouts/navbar") -%>

<!-- Page Header -->
<div class="container-fluid bg-light text-dark py-5" style="margin-bottom: -20px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);">
  <div class="container text-center">
    <div class="row justify-content-center">
      <div class="col">
        <h1 class="display-4 fw-bold" style="font-family: 'Poppins', sans-serif; color: #343a40; text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);">
          Saved Recipes
        </h1>
        <p class="text-muted" style="font-size: 1.2rem; font-style: italic; text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);">
          Your collection of favorite recipes, ready to cook!
        </p>
        <div class="d-flex justify-content-center align-items-center">
          <hr class="w-25 mx-2" style="border-top: 3px solid #343a40; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);">
          <i class="fas fa-star" style="font-size: 1.5rem; color: #343a40; text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.2);"></i>
          <hr class="w-25 mx-2" style="border-top: 3px solid #343a40; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);">
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Recipe Cards Section -->
<div class="container">
  <div class="row justify-content-center">
    <% data.forEach(recipe => { %>
      <%- include('partials/recipe-card', { recipe: recipe }) %>
    <% }); %>
  </div>
</div>

<%- include("layouts/footer") -%>
